@page
@model Web.Pages.Cuenta.PerfilModel
<header class="subhead">
    <div class="container">
        <div class="masthead-subheading">SC-701: Programación Web Avanzada</div>
        <div class="masthead-heading text-uppercase">Ejercicio Persona</div>
    </div>
</header>

<section class="page-section bg-light" id="principal">
    <div class="container">
        <div class="col-xl-5 col-lg-6 col-md-8 col-sm-10 mx-auto bg-white p-2 p-md-5 rounded shadow">
            <div class="text-center">
                <h2 class="section-heading text-uppercase">Enviar Información</h2>
                <h3 class="section-subheading text-muted">
                    Lorem ipsum dolor sit amet consectetur.
                </h3>
            </div>

            <!-- Mensajes de estado -->
            <div class="alert alert-warning" role="alert" style="@(Model.envioEstado == System.Net.HttpStatusCode.BadRequest ? "display:block" : "display:none")">
                Error al cargar el documento.
            </div>
            <div class="alert alert-success" role="alert" style="@(Model.envioEstado == System.Net.HttpStatusCode.OK ? "display:block" : "display:none")">
                Documento cargado y notificado correctamente.
            </div>

            <!-- Formulario -->
            <form method="post" enctype="multipart/form-data">
                <div class="input-group mb-3">
                    <span class="input-group-text"><i class="bi bi-youtube"></i></span>
                    <input type="text" placeholder="Video" asp-for="perfil.Video" class="form-control form-control-lg" />
                </div>
                <div class="input-group mb-3">
                    <span class="input-group-text"><i class="bi bi-file-earmark"></i></span>
                    <input type="file" asp-for="curriculum" class="form-control form-control-lg" />
                </div>
                <div class="input-group mb-3">
                    <span class="input-group-text"><i class="bi bi-person-bounding-box"></i></span>
                    <input type="file" asp-for="foto" class="form-control form-control-lg" />
                </div>
                <div class="text-danger mb-3" asp-validation-summary="All"></div>
                <div class="d-flex justify-content-between">
                    <a class="btn btn-primary" asp-page="./Index">Regresar</a>
                    <button class="btn btn-success" type="submit">Enviar</button>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

    }
}